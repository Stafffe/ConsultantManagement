@model IEnumerable<CM.Web.Models.AssignmentProcessDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Assignment List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="AssignmentProcessCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New Assignment</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Brocker
                </th>
                <th>
                    Status
                </th>
                <th>
                    Action
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Brocker
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.Action
                    </td>
                    <td>
                        <a asp-action="AssignmentProcessEdit" class="btn btn-success" asp-route-assignmentProcessId="@item.AssignmentProcessId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="AssignmentProcessDelete" class="btn btn-danger" asp-route-assignmentProcessId="@item.AssignmentProcessId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>