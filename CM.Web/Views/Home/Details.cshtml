@model CM.Web.Models.AssignmentProcessDto

<form method="post">
    <input asp-for="AssignmentProcessId" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Title</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@Model.Customer</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge badge-primary text-success p-3 border">@Model.Brocker</span>
                                    <span class="badge badge-primary text-success p-3 border">@Model.Consultant</span>
                                    <span class="badge badge-primary text-success p-3 border">@Model.Status</span>
                                    <span class="badge badge-primary text-success p-3 border">@Model.Action</span>

                                    <h3 class="text-success"></h3>

                                    <div class="col-10 pb-3" style="height:400px" >
                                        <textarea class="form-control" style="width: 100%; height: 100%;" disabled>"@Model.Description"</textarea>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <di class="card-footer row bg-dark">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-controller="AssignmentProcess" asp-action="AssignmentProcessEdit" asp-route-assignmentProcessId="@Model.AssignmentProcessId" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">
                        <i class="fas fa-edit"></i>
                        Edit Assignment
                    </a>
                </div>
                <div class="col-12 col-md-6">
                    <a asp-controller="AssignmentProcess" asp-action="AssignmentProcessDelete" asp-route-assignmentProcessId="@Model.AssignmentProcessId" class="btn btn-danger btn-square form-control btn-lg" style="height:50px;">
                        <i class="fas fa-trash"></i>
                        Delete Assignment
                    </a>
                </div>
        </div>
    </div>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}